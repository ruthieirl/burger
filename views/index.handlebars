<div class="container">

  <div class="jumbotron">
  
  <h1 class="text-center"><span class="glyphicon glyphicon-cutlery"></span> Eat-Da-Burger Dinner Party</h1>

  <hr>

  <h2>Invite a Burger</h2>
  
  <h4>Which burgers should we invite to dinner?</h4>
  
  <form class="create-form">

    <div class="form-group">
      <label for="bu">Burger Name:</label><br>
      <input type="text" id="bu" name="burger_name">
    </div>

    <div class="form-group">
      <label for="devo">Devoured?</label><br>
      <input type="radio" name="devour" value="1" checked> Devoured!<br>
      <input type="radio" name="devour" value="0"> Available
    </div>

    <button class="btn btn-info btn-block" type="submit"><span class="glyphicon glyphicon-envelope"></span> Send Invite</button>
  </form>
  
  </div><!--jumbotron-->

  <div class="row">
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">    

    <h2 class="text-center">Burgers On Da Menu!</h2>

      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            {{> burgers/burger-block devour=true}}
          {{/unless}}
        {{/each}}
      </ul>
    </div>
    
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
    
    <h2 class="text-center">All My Friends Are Dead!</h2>

    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devour=false}}
        {{/if}}
      {{/each}}
    </ul>
    </div>
  
  </div><!--row-->

</div><!--container-->